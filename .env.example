# Funda Property Finder - Configuration
# Copy this to .env and adjust as needed

# Database Configuration
# PostgreSQL connection URL (recommended for production)
FUNDA_DB_URL=postgresql://user:password@localhost:5432/funda
# Legacy SQLite path (optional, ignored if DB_URL is set)
# FUNDA_DB_PATH=data/funda.db

# Scraping Configuration
FUNDA_RATE_LIMIT=3.0
FUNDA_DEFAULT_CITIES=amsterdam,rotterdam,den-haag,utrecht
FUNDA_PROPERTY_TYPES=buy

# Scheduling Configuration
FUNDA_SCHEDULE_ENABLED=false
FUNDA_SCHEDULE_CRON=0 2 * * *
FUNDA_SCHEDULE_TIMEZONE=Europe/Amsterdam

# Logging Configuration
FUNDA_LOG_LEVEL=INFO
FUNDA_LOG_FILE=logs/funda.log

# Dashboard Configuration
FUNDA_HOST=127.0.0.1
FUNDA_PORT=8000
